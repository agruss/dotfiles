[core]
    editor=nvim

[init]
	defaultBranch = main
[user]
	name = Andreas Gru√ü
    email = agruss90@googlemail.com
[push]
    autoSetupRemote = true

[alias]
    ddiff = -c diff.external=difft diff
    dlog = -c diff.external=difft log -p --ext-diff

[difftool "difftastic"]
    cmd = difft "$MERGED" "$LOCAL" "$REMOTE"
[difftool]
    prompt = false
[pager]
    difftool = true
[diff]
    external = difft

[merge]
    tool = nvimdiff
[mergetool "nvimdiff"]
    layout = LOCAL,MERGED,REMOTE
